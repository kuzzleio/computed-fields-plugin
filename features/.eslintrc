{
  "rules": {
    "func-names": 0,
    "no-invalid-this": 0,
    "no-console": 0,
    "no-new": 0,
    "new-cap": 0,
    "semi": [2, "always"]
  },
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }
}